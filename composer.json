{
    "name": "phpactor/text-document",
    "description": "Collection of value objects for representing and referencing text documents",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "daniel@dantleech.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpactor/test-utils": "^1.0",
        "phpstan/phpstan": "~0.12.0",
        "phpunit/phpunit": "^9.0",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Phpactor\\TextDocument\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpactor\\TextDocument\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "integrate": [
            "./vendor/bin/php-cs-fixer fix",
            "./vendor/bin/phpstan analyse lib -c phpstan.neon",
            "./vendor/bin/phpunit",
            "./vendor/bin/infection"
        ]
    }
}
